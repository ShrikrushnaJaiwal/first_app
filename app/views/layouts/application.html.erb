<!DOCTYPE html>
<html>
<head>
  <title> Books Online Store </title>

  <%= stylesheet_link_tag "scaffold" %>
  <%= stylesheet_link_tag "custom", :media => "all" %>

  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body id="store">
  <div id="banner">
   
    <%= @page_title || "Shri Book Depot"%>
  </div>
  <div id="columns">
    <div id="side">
     
      <div id="cart">
        <% if @cart %> 
        <%= render @cart %>
   	<% end %>
      </div>
    
      <li><%=link_to 'HOME', "store/index" %></li>
    </div>
    <div id="main">
      <%= yield %>
    </div>
  </div>
</body>
</html>

