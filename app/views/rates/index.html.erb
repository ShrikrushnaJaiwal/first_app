<h1>Listing ratings and Reviews </h1>

<table>
  <tr>
    <th>Name</th>
    <th>Review</th>
    <th>Rating</th>
    <th>Product</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @rates.each do |rate| %>
  <tr>
    <td><%= rate.name %></td>
    <td><%= rate.review %></td>
    <td><%= rate.rating %></td>
    <td><%= rate.product_id %></td>
    <td><%= link_to 'Show', rate %></td>
    <td><%= link_to 'Edit', edit_rate_path(rate) %></td>
    <td><%= link_to 'Destroy', rate, :method => :delete, :data => { :confirm => 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

